<div class="container">
  <nav class="breadcrumb" aria-label="breadcrumbs">
    <ul>
      <li><%= link_to "Home", '/' %></li>
      <li><%= link_to "Chord Modifiers", chord_modifiers_path %></li>
      <li class="is-active"><%= link_to @chord.chord_modifier_name, chord_modifier_chord_modifiers_chords_path(@chord.chord_modifier_name) %></li>
    </ul>
  </nav>
</div>
<div class="section">
  <div class="container">
    <% @chords.each do |chord| %>
      <article class="media">
        <div class="media-content">
          <div class="content">
            <h1><%= link_to chord.chord_name_with_flat, chord_modifier_chord_modifiers_chord_path(chord.chord_modifier_name, chord.chord_name_with_flat), class: "has-text-black" %></h1>
            <p>
              <span><%= chord.root_note&.note_name_with_flat %></span>
              <span><%= chord.third&.note_name_with_flat %></span>
              <span><%= chord.fifth&.note_name_with_flat %></span>
              <span><%= chord.seventh&.note_name_with_flat %></span>
            </p>
          </div>
        </div>
      </article>
    <% end %>
  </div>
</div>
